<div class="container-fluid">
  <div class="row">

    <%= render "users/users/sidebar" %>

    <div class="col-6 offset-2 mt-5" id="main">



      <div class="card mb-4">
        <div class="card-body">
          <%= link_to user_path(@post.user) do %>
            <div class="row align-items-center">
              <%= attachment_image_tag(@post.user, :profile_image, fallback: "no-image.png", size: "70x70") %>
              <h5><%= @post.user.name %></h5>
            </div>
          <% end %>
          <p class="card-text">
            <small class="text-muted"><%= @post.created_at.strftime('%Y/%m/%-d/%R') %></small>
          </p>
          <p class="card-text">
            <%= simple_format(@post.body) %>
          </p>

          <% if @post.user == current_user %>
            <div class="row align-items-center">
              <div class="far fa-comment col-3 text-center" id="comment_count">
                <%= render partial: "users/post_comments/comment_count", locals: {post_comments: @post.post_comments} %>
              </div>
              <div class="col-3 text-center" id="favorite-<%= @post.id %>">
                <%= render partial: "users/favorites/favorite", locals: {post: @post} %>
              </div>
              <div class="col-3 text-center">
                <%= link_to "編集", edit_post_path(@post), class: "btn btn-outline-primary" %>
              </div>
              <div class="col-3 text-center">
        			  <%= link_to "削除", post_path(@post), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-outline-danger" %>
        			</div>
      			</div>
    			<% else %>
    			  <div class="row align-items-center">
              <div class="far fa-comment col-4 text-center" id="comment_count">
                <%= render partial: "users/post_comments/comment_count", locals: {post_comments: @post.post_comments} %>
              </div>
              <div class="col-4 text-center" id="favorite-<%= @post.id %>">
                <%= render partial: "users/favorites/favorite", locals: {post: @post} %>
              </div>
            </div>
      		<% end %>
        </div>
      </div>

      <h3>成績</h3>
    	<div class="accordion" id="accordionExample">
        <div class="card">
          <div class="card-header" id="headingOne">
            <h5 class="mb-0">
              <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                打撃
              </button>
            </h5>
          </div>

          <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">
              <table class="table table-bordered table-condensed">
                <tr>
                  <th>打数</th>
                  <th>単打</th>
                  <th>二塁打</th>
                  <th>三塁打</th>
                  <th>本塁打</th>
                  <th>打点</th>
                  <th>得点</th>
                  <th>四死球</th>
                  <th>盗塁</th>
                </tr>
                <tr>
                  <td><%= @post.AB %></td>
                  <td><%= @post.single %></td>
                  <td><%= @post.double %></td>
                  <td><%= @post.triple %></td>
                  <td><%= @post.HR %></td>
                  <td><%= @post.RBI %></td>
                  <td><%= @post.run %></td>
                  <td><%= @post.BB_HBP %></td>
                  <td><%= @post.steal %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header" id="headingTwo">
            <h5 class="mb-0">
              <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                投球
              </button>
            </h5>
          </div>
          <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
            <div class="card-body">
              <table class="table table-bordered table-condensed">
                <tr>
                  <th>投球回</th>
                  <th>被安打</th>
                  <th>失点</th>
                  <th>奪三振</th>
                  <th>与四死球</th>
                </tr>
                <tr>
                  <td><%= @post.inning %></td>
                  <td><%= @post.hit_allowed %></td>
                  <td><%= @post.run_allowed %></td>
                  <td><%= @post.SO %></td>
                  <td><%= @post.BB_HBP_allowed %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header" id="headingThree">
            <h5 class="mb-0">
              <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                チーム
              </button>
            </h5>
          </div>
          <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
            <div class="card-body">
              <table class="table table-bordered table-condensed">
                <tr>
                  <th>対戦チーム</th>
                  <th>得点</th>
                  <th>失点</th>
                  <th>試合日</th>
                </tr>
                <tr>
                  <td><%= @post.team_against %></td>
                  <td><%= @post.score_my_team %></td>
                  <td><%= @post.score_team_against %></td>
                  <td><%= @post.date %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div id="carouselExampleIndicators" class="carousel slide my-5" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <% @post_images.drop(1).count.times do |index| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="#{index}"></li>
          <% end %>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <% @post_images.first(1).each do |post_image| %>
              <%= attachment_image_tag post_image, :post_image, class: "carousel_image col-12" %>
            <% end %>
          </div>
          <% @post_images.drop(1).each do |post_image| %>
            <div class="carousel-item">
              <%= attachment_image_tag post_image, :post_image, class: "carousel_image col-12" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <% if @post.youtube_url.present? %>
        <div class="youtube mt-5">
          <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @post.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      <% end %>


  		<!--コメント入力フォーム-->
      <div class="form-group my-5">
      	<%= form_with(model:[@post, @post_comment], remote: true) do |f| %>
      	  <%= f.text_field :comment, placeholder: "コメントを入力...", class: "col-12" %>
      	  <div><%= f.submit "送信する", class: "btn btn-outline-success btn-sm float-right mt-2" %></div>
      	<% end %>
      </div>

  		<div id="comments">
  		  <%= render partial: "users/post_comments/post_comments", locals: {post_comments: @post.post_comments} %>
  		</div>
		</div>
  </div>
</div>