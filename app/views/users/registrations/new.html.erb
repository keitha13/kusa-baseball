<div class="container">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">選手登録</h1>
  </div>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <p><%= render "users/shared/error_messages", resource: resource %></p>
    <div class="form-label-group">
      <%= f.label :名前 %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Name" %>
    </div>
    <br>
    <div class="form-label-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
    </div>
    <br>
    <div class="form-label-group">
      <%= f.label :パスワード（6文字以上） %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
    </div>
    <br>
    <div class="form-label-group">
      <%= f.label :パスワード（確認用） %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-5", placeholder: "Password(confirmation)" %>
    </div>
    <%= f.submit "選手登録", class: "btn btn-primary btn-lg btn-block" %>
  <% end %>
  <%= render "users/shared/links" %>
</div>