<div class="container">

  <div class="row">
    <h3 class"mypage">マイページ</h3>
       <p>
         <strong class="info">登録情報</strong>
       </p>
  </div>

  <div class="row">
    <div class="mypage_info col-xs-6">
      <table class="table table-bordered table-condensed">
        <tr>
          <th>プロフィール画像</th>
          <td><%= attachment_image_tag(@user, :profile_image, fallback: "no-image.png", size: "100x100") %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td div class="col-xs-8"><%= @user.name %></td>
        </tr>
        <tr>
          <th>誕生日</th>
          <td div class="col-xs-8"><%= @user.birthday %></td>
        </tr>
        <tr>
          <th>所属チーム</th>
          <td div class="col-xs-8"><%= @user.team %></td>
        </tr>
        <tr>
          <th>活動地域</th>
          <td div class="col-xs-8"><%= @user.active_area %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td div class="col-xs-8"><%= @user.email %></td>
        </tr>
      </table>
    </div>
    <p><%= link_to "編集する", edit_user_path, class: "btn btn-primary" %></p>
    <% if user_signed_in? && @user.id == current_user.id %>
      <%= link_to "退会する", quit_users_path, class: "btn btn-danger" %>
    <% end %>
  </div>

</div>