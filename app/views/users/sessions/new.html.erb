


  <h1 class="h3 mb-3 font-wight-normal">ログインする</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
  <div class="checkbox mb-3">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
    <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
<%= render "users/shared/links" %>
<div class="error">
  <h3><%= flash[:error] %></h3>
</div>